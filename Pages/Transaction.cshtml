@page
@model TransactionModel
@{
    ViewData["Title"] = "New Transaction";
}
<h3>@ViewData["Title"]</h3>

<p>Record your transactions whenever you need</p>
<hr/>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(account => account.AccountName, "Account", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(account => account.AccountName, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(account => account.AccountName, "", new {@class="text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(date => date.TransactionDate, "Transaction Date", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(date => date.TransactionDate, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(date => date.TransactionDate, "", new {@class="text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(transactiondetail => transactiondetail.TransactionDetail, "Transaction Detail", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(transactiondetail => transactiondetail.TransactionDetail, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(transactiondetail => transactiondetail.TransactionDetail, "", new {@class="text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(transactionlocation => transactionlocation.TransactionLocation, "Transaction Location", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(transactionlocation => transactionlocation.TransactionLocation, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(transactionlocation => transactionlocation.TransactionLocation, "", new {@class="text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(category => category.CategoryName, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(category => category.CategoryName, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(category => category.CategoryName, "", new {@class="text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(transactionamount => transactionamount.TransactionAmount, "Transaction Amount", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(transactionamount => transactionamount.TransactionAmount, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(transactionamount => transactionamount.TransactionAmount, "", new {@class="text-danger"})
            </div>
        </div>

        <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
        </div>
    </div>




}

